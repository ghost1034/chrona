{
  "name": "dayflow",
  "description": "Records your screen and generates a timeline of your activities.",
  "private": true,
  "version": "0.0.0",
  "author": "Dayflow",
  "type": "module",
  "main": "dist/main/app.cjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,TSUP,ELECTRON \"vite\" \"tsup --watch\" \"wait-on tcp:5173 && cross-env DAYFLOW_DEV_SERVER_URL=http://localhost:5173 nodemon --watch dist/main --exec electron .\"",
    "build:main": "tsup",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "db:smoke": "npm run build:main && node dist/tools/db-smoke.cjs",
    "analysis:smoke": "npm run build:main && node dist/tools/analysis-smoke.cjs",
    "test": "cross-env TZ=America/Los_Angeles vitest run",
    "test:watch": "cross-env TZ=America/Los_Angeles vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "ffmpeg-static": "^5.2.0",
    "keytar": "^7.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.dayflow.app",
    "productName": "Dayflow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "protocols": [
      {
        "name": "Dayflow",
        "schemes": ["dayflow"]
      }
    ]
  },
  "overrides": {
    "node-gyp": "^10.0.0"
  }
}
